{
  "name": "@xpla/xpla",
  "version": "1.8.2",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "author": "Joowon Yun <joowon@delightlabs.io>",
  "homepage": "https://github.com/xpladev/xplajs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpladev/xplajs.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./*": {
      "import": "./esm/*.js",
      "require": "./*.js",
      "types": "./*.d.ts"
    },
    "./*.js": {
      "import": "./esm/*.js",
      "require": "./*.js",
      "types": "./*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "copy": "copyfiles -f README.md package.json dist",
    "clean": "rimraf dist/**",
    "build": "npm run clean; tsc; tsc -p tsconfig.esm.json; npm run copy",
    "build:dev": "npm run clean; tsc --declarationMap; tsc -p tsconfig.esm.json",
    "lint": "eslint . --fix",
    "starship:run": "sh ../../scripts/run-starship.sh",
    "starship:clean": "starship stop --config ./starship/configs/config.yaml",
    "starship:test": "jest --config ./jest.starship.config.js",
    "starship:debug": "jest --config ./jest.starship.config.js --runInBand --verbose --bail"
  },
  "dependencies": {
    "@ethersproject/transactions": "^5.7.0",
    "@interchainjs/auth": "^1.19.1",
    "@interchainjs/cosmos": "^1.19.2",
    "@interchainjs/cosmos-types": "^1.19.1",
    "@interchainjs/ethereum": "^1.19.1",
    "@interchainjs/types": "^1.19.1",
    "@interchainjs/utils": "^1.19.1",
    "@xpla/xplajs": "^1.8.0",
    "@noble/hashes": "^1.3.1",
    "bech32": "^2.0.0",
    "bignumber.js": "^9.1.0",
    "bip39": "^3.1.0",
    "decimal.js": "^10.4.3",
    "deepmerge": "4.2.2",
    "ethers": "^6.13.5",
    "interchainjs": "^1.19.0"
  },
  "keywords": [
    "xpla"
  ],
  "devDependencies": {
    "@interchainjs/encoding": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@xpla/evm": "^1.8.0",
    "bech32": "^2.0.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.5",
    "jest": "^29.5.0",
    "starshipjs": "^2.4.0",
    "ts-jest": "^29.1.0"
  }
}
